// Header style
// - Position of title + style
.header__heading
    width 100%
.heading__title
    position relative
    &:after
        display block
        content ""
        rem-fallback( width, 60px )
        rem-fallback( height, 60px )
        position absolute
        rem-fallback( top, 8px )
        rem-fallback( left, 286px )
        background url( "images/sprite.png" ) -10px -10px
.title__main
    font-weight bold
    font-variant small-caps
    padding 0
    margin 0
.title__second
    rem-fallback( margin-left, wf_font-size )
    font-weight normal
.cite__main
    display block
    font-size wf_font-size * 1.15
    font-style italic
    rem-fallback( margin-top, -4px )

// - Navigation + search form
.header__navigation
    rem-fallback( margin-top, 24px )
.navigation__nav
    float left
.nav__element
    rem-fallback( font-size, 20px )
    font-family wf_font-heading
    text-transform uppercase
    rem-fallback( margin-right, 16px )
.element__link
    color wf_nav-color
    &:hover
        color wf_nav-color-hover
        rem-fallback( padding-bottom, 4px )
        border-bottom 1px solid wf_nav-color-hover
.navigation__search
    float right
