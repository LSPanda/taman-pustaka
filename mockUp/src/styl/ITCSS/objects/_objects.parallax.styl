// Parallax placements
.parallax__img
    position relative
    min-height 80vh
    +media-query( screen, max-width 1920px )
        min-height 75vh
    +media-query( screen, max-width 1280px )
        min-height 70vh
    +media-query( screen, max-width 800px )
        min-height 50vh
    +media-query( screen, max-width 400px )
        min-height 35vh
    &:before
        content ""
        position absolute
        top 0
        right 0
        bottom 0
        left 0

.parallax__body
    rem-fallback( max-width, 1260px )
    margin 0 auto
